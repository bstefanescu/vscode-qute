        { "open": "<!--", "close": "-->", "notIn": ["comment", "string"] }
    ],
    "surroundingPairs": [
        { "open": "'", "close": "'" },
        { "open": "\"", "close": "\"" },
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
