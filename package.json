{
    "name": "qutejs-vscode",
    "displayName": "QuteJs",
    "description": "QuteJs tooling for vscode",
    "version": "0.0.1",
    "keywords": [
        "qute",
        "qutejs",
        "tooling",
        "language"
    ],
    "homepage": "https://qutejs.org",
    "repository": {
      "url": "https://github.com/bstefanescu/qutejs-vscode",
      "type": "git"
    },
    "icon": "qute.png",
    "author": "Bogdan Stefanescu <bogdan@quandora.com>",
    "license": "MIT",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:qutejs"
    ],
    "contributes": {
        "configuration": {
            "id": "qutejs",
            "title": "QuteJs",
            "properties": {
                "qutejs.autoClosingTags": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable autoclosing of HTML and QuteJs template tags."
                }
            }
        },
        "breakpoints": [{ "language": "qutejs" }],
        "languages": [
            {
                "id": "qutejs",
                "aliases": [
                    "QuteJs",
                    "Qute"
                ],
                "extensions": [
                    ".jsq"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "qutejs",
                "scopeName": "source.qutejs",
                "path": "./syntaxes/qutejs.tmLanguage.json",
                "embeddedLanguages": {
                    "source.js": "javascript",
                    "source.css": "css"
                }
            }
        ],
        "commands": [
            {
                "command": "qutejs.component.preview",
                "title": "Preview a Qute Component",
                "category": "Web"
            }
        ]
    },
    "main": "./src/extension.js",
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.48.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "eslint": "^7.6.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "@qutejs/rollup-plugin-qute": "^1.0.0-rc.11",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "rollup": "^2.26.6",
        "rollup-plugin-postcss": "^3.1.6"
    }
}
